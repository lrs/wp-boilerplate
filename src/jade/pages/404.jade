include ../partials/get-header
header.page-header
  .container
    .row
      .col-sm-12
        h1.text-center.page-title
          - esc_html_e( 'Oops! That page can&rsquo;t be found.' )

.container
  #primary.row.content-area
    main#main.site-main.col-sm-8.col-sm-offset-2
      p
        - esc_html_e( 'It looks like nothing was found at this location. Maybe try a search or one of the links below?' )

      - get_search_form()

      - the_widget( 'WP_Widget_Recent_Posts' )

      :php
        $archive_content = '<p>' . sprintf( esc_html__( 'Or try looking in the monthly archives:' ) ) . '</p>';
        the_widget( 'WP_Widget_Archives', 'dropdown=1 ', "after_title=</h2>$archive_content " );

include ../partials/get-footer